<div class='card mx-auto w-75 mt-5'>
  <div class='card-header fs-4'>
    Create New
  </div>
  <form
    id='recordForm'
    action='/records'
    method='POST'
    class='needs-validation'
    novalidate
  >
    <div class='card-body'>
      <div class='row mb-2'>
        <div class='col-3 text-secondary my-auto'>
          Name：
        </div>
        <div class='col-8'>
          <input
            type='text'
            class='form-control'
            name='name'
            id='name'
            placeholder='Your item name'
            maxlength='200'
            required
          />
          <div class='invalid-feedback'>
            Please enter the item name!
          </div>
        </div>
      </div>
      <div class='row mb-2'>
        <div class='col-3 text-secondary my-auto'>
          Date：
        </div>
        <div class='col-8'>
          <input
            type='date'
            class='form-control'
            name='date'
            id='date'
            value='{{today}}'
            required
          />
          <div class='invalid-feedback'>
            Please select the date!
          </div>
        </div>
      </div>
      <div class='row mb-2'>
        <div class='col-3 text-secondary my-auto'>
          Category：
        </div>
        <div class='col-8'>
          <select
            id='categoryId'
            name='categoryId'
            class='form-select'
            aria-label='Category select'
            required
          >
            {{#each categories as |category|}}
              <option value='{{category.id}}'>{{category.name}}</option>
            {{/each}}
          </select>
          <div class='invalid-feedback'>
            Please select the category of item!
          </div>
        </div>
      </div>
      <div class='row mb-2'>
        <div class='col-3 text-secondary my-auto'>
          Amount：
        </div>
        <div class='col-8'>
          <input
            type='number'
            class='form-control'
            name='amount'
            id='amount'
            placeholder='your item amount'
            step='1'
            min='1'
            required
          />
          <div class='invalid-feedback'>
            Please input the amount of item!
          </div>
        </div>
      </div>
    </div>
    <div class='card-footer d-flex justify-content-center'>
      <a href='/' type='button' class='btn btn-secondary mx-1'>Cancel</a>
      <button type='submit' class='btn btn-warning mx-1'>Create</button>
    </div>
  </form>
</div>
<script src='/js/record-script.js'></script>