<div class='card mx-auto w-50 mt-5 text-dark'>
  <div class='card-header fs-4'>
    Edit
  </div>
  <form
    id='recordForm'
    action='/records/{{id}}?_method=PUT'
    method='POST'
    class='needs-validation d-flex align-items-center justify-content-center flex-column'
    novalidate
  >
    <div class='card-body d-flex flex-column mt-5'>
      <div class='d-flex align-items-center mb-3'>
        <label for='name'>Name</label>
        <input
          type='text'
          class='form-control'
          name='name'
          id='name'
          placeholder='Your item name'
          maxlength='50'
          value='{{name}}'
          required
        />
        <div class='invalid-feedback'>
          Please enter the item name!
        </div>
      </div>
      <div class='d-flex align-items-center mb-3'>
        <label for='date'>Date</label>
        <input
          type='date'
          class='form-control'
          name='date'
          id='date'
          value='{{date}}'
          required
        />
        <div class='invalid-feedback'>
          Please select the date!
        </div>
      </div>
      <div class='d-flex align-items-center mb-3'>
        <label for='categoryId'>Category</label>
        <select
          id='categoryId'
          name='categoryId'
          class='form-select'
          aria-label='Category select'
          required
        >
          <option
            value='{{selectedCategory.id}}'
            selected
          >{{selectedCategory.name}}</option>
          {{#each categories as |category|}}
            <option value='{{category.id}}'>{{category.name}}</option>
          {{/each}}
        </select>
        <div class='invalid-feedback'>
          Please select the category of item!
        </div>
      </div>
      <div class='d-flex align-items-center'>
        <label for='amount'>Amount</label>
        <input
          type='number'
          class='form-control'
          name='amount'
          id='amount'
          value={{amount}}
          placeholder='your item amount'
          step='1'
          min='1'
          required
        />
        <div class='invalid-feedback'>
          Please input the amount of item!
        </div>
      </div>
    </div>
    <div class='editBtns m-4 w-25 d-flex justify-content-center'>
      <a
        href='/'
        type='button'
        class='btn btn-secondary btn-sm mx-3 fw-bold'
      >Cancel</a>
      <button
        type='submit'
        class='btn btn-sm btn-warning mx-3 fw-bold'
      >Edit</button>
    </div>
  </form>
</div>
<script src='/js/record-script.js'></script>